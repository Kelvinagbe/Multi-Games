{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "ALLOWALL" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "Content-Security-Policy", "value": "frame-ancestors * https://multi-games-fawn.vercel.app;" }
      ]
    }
  ],
  "rewrites": [
    // General rewrite rule for all JavaScript files in /js
    {
      "source": "/js/:filename",
      "destination": "/js/:filename.js"
    },
    // For login page, you still want to map to login.html
    {
      "source": "/auth/login",
      "destination": "/auth/login.html"
    },
    // Optional: Handle other assets like CSS if needed
    {
      "source": "/css/style",
      "destination": "/css/style.css"
    }
  ],
  "redirects": [
    {
      "source": "/404",
      "destination": "/404.html",
      "statusCode": 404
    }
  ]
}